<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("./partials/head") %>
    <title>BlogPage</title>
</head>
<body>
    <%- include('./partials/nav') %>
    <div class="container">
        <h1>
            <%= blog.title %>
        </h1>
        <img src="<%= blog.coverImageURL %>" width="200px" height="200px" alt="">
        <pre><%= blog.body %></pre>

    </div>
    
    <div class="container mt-4">
        <img src="<%=blog.createdBy.profileURL%>"  width="50px" > <%= blog.createdBy.fullname %>
    </div>

    <div class="container mt-4">
            <% if (locals.user) { %>
                <form action="/blog/comment/<%= blog._id %>" method="POST">
                    <div class="mb-3 container">
                      
                      <input type="text" name="content" class="form-control" placeholder="Enter your comments">
                      <button class="mt-3" type="submit" class="btn btn-primary">Submit</button>
                      </div>
                   
                    
            </form>
            
            <% } %>
            <h4>Comments</h4>
            <h6>Total Comments<%= comments.length %></h6>
            <% comments.forEach(comment => { %>
                <div class="container">
                    <img src="<%= comment.createdBy.profileURL %>" width="50px" >
                    <%= comment.createdBy.fullname %>
                    <pre><%= comment.content %></pre>
                </div>
            <% }) %>
    </div>

    
    <%- include('./partials/scrpits') %>
</body>
</html>